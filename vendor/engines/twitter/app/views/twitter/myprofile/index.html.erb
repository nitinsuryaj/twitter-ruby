<body>
	<div class="topdiv">
		<div class="imagediv">
			<h2><%= link_to image_tag('twitter\twitter3.jpg', :height =>"85%"), {:controller => "welcome"}, :class=>'nd' %><h2>
		</div>
		<div class="userdiv">
			<h2><%= @user.username %><h2>		
		</div>
		<div class="searchdiv">
			<%= form_tag({:controller => "welcome", :action => "search"}, :method => "post") do %>
			<%= text_field_tag(:search) %>
			<%= submit_tag(:Search) %>
			<% if params[:searchcheck] == '1' %>
			<br>
			<div style="color:#FC2942; float:left">enter user name</div>
			<% end %>
			<%end%>	
		</div>
		<div class="logoutdiv">
			<%= puts " " %><%= link_to 'Sign Out', "/intro/logout", :class => 'l' %> 
		<%= link_to 'Main App', "/", :class => 'l' %>
		</div>

	</div>
	<div class="contentdiv"> 
		<div class="incontentdiv">
			
			<h3 style="display:inline">First Name: </h3><%= @detail.fname %><br>
			<h3 style="display:inline">Username: </h3><%= @user.username %><br>
			<h3 style="display:inline">Email: </h3><%= @detail.email %><br>
			<h3 style="display:inline">Address: </h3><%= @detail.address %><br>

			<%= link_to 'Delete profile', :controller => "myprofile", :action => "delete" , :uid => "#{@user.id}" %>
		</div>
		</div>
	</div>
</body>