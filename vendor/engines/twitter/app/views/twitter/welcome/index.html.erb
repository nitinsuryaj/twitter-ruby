
	<body style="background-color:black; height:auto">
	<div style=" top: 3px;width: 90%; height: 59px; background-color: #515052;border: 1px solid; padding: 8px; margin:0 auto">
		<div style="margin-top:-13px; padding:0px 10px 0px 10px; border-radius:12px; float:left;">
			<h2><%= link_to image_tag('twitter\twitter3.jpg', :height =>"85%"), {:controller => "welcome"}, :class=>'nd' %><h2>
		</div>
		<div style="padding:4px; float:left; background-color:#3D3B3B; margin-left:300px; margin-top:-8px; border: 1px solid">
			<h2>Welcome <%= @user.username %><h2>		
		</div>
		<div style="background-color:#A4A1A1;border: 1px solid; width:250px; padding:10px 8px 4px 10px; border-radius:12px; float:left; margin-left: 120px; margin-top:1px">
			<%= form_tag({:controller => "welcome", :action => "search"}, :method => "post") do %>
			<%= text_field_tag(:search) %>
			<%= submit_tag(:Search) %>
			<% if params[:searchcheck] == '1' %>
			<br>
			<div style="color:#FC2942; float:left">enter user name</div>
			<% end %>
			<%end%>	
		</div>
		<div style="margin-top:10px;margin-right:20px;padding:0px 10px 0px 10px; border-radius:12px; float:right;">
			<%= puts " " %><%= link_to 'Sign Out', "/intro/logout", :class => 'l' %> 
		<%= link_to 'Main App', "/", :class => 'l' %>
		</div>

	</div>
	<div style="background-color:#3D3B3B; padding: 20px;width=auto; margin-left:150px; margin-right:auto; position:absolute"> 
		<div style="margin-top:0px;border: 1px solid; width: 270px; background-color: #A4A1A1;border-radius:12px; padding:0px 20px 6px 20px; float:left;">
			<%= form_tag({:controller => "welcome", :action => "tweet"}, :method => "post") do %>
			<h2>Tweet</h2>
			<% if params[:tweetcheck] == '1' %>
			<div style="color:#FC2942;font-weight: bold;">empty tweets not allowed</div><br>
			<% end %>
			<%= text_area_tag(:tweet)%><br>
			<%= submit_tag(:Tweet) %> 
			<%end%>
		</div>
		<div style="width: 690px; margin-left:10px; background-color: #A4A1A1; padding-top: 10px; border-radius:12px; float:right;">
			<h1 style="margin-left:30px">Posts</h1>
			<% @posts.each do |x| %>
			<div style="border-top:1px solid; border-bottom:1px solid;border-left:2px solid;background-color:#A4A1A1;padding-left:20px; padding-right:20px; padding-top:5px; padding-bottom:5px; margin:2px; border-radius:8px;">
					<%= @subidu.each do |y| %>
					<% @name=y[1]
						break if y[0]===x.uid	%>		
					<% end %>
				<h4 style="float:left">
					<%= @name %> 
				</h4>
				<h4 style="float:right"><%= x.created_at %></h4>
				<% if x.uid == session['uid'] %>
				<h4 style="float:right; margin-right:5px;"><%= link_to  "Delete", :controller => "welcome", :action => "delete", :pid => "#{x.id}" %></h4><br><br>
				<% else %>
				<h4 style="float:right; margin-right:5px;"><%= link_to  "Retweet", :controller => "welcome", :action => "retweet", :pid => "#{x.id}" %></h4>
				<% end %><br><br>
				<p>
					<%= x.tweet %>
				</p>
			</div>
			<% end %>
		</div>
		</div>
	</div>
</body>